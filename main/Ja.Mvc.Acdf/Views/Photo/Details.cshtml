@model Ja.Mvc.Acdf.Models.PhotoViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="container">
    <h4>AcdfPhoto</h4>
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.TextAreaFor(model => model.Description, new { rows = "4", disabled = "true" })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Place)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Place)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SubCategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubCategoryName)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.SchoolPeriod)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SchoolPeriod)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Path)
        </dt>
        <dd>
            <div style="max-width:500px">
                <img style="max-width:100%; height:auto; width:auto" src="@Html.DisplayFor(model => model.Path)" alt="@Html.DisplayFor(model => model.Path) " title="@Html.DisplayFor(model => model.CategoryName)" />
            </div>
        </dd>

    </dl>
</div>

<div>
    <span class="btn btn-default"><a href="javascript:history.back()">Back</a></span>
</div>

